#!/usr/bin/env bats

@test "get BTC balance" {
  result="$(
    bin/balance \
    --user cryptorpc \
    --password local321 \
    --port 8333 \
    --host bitcoin \
    --currency BTC
    )"
  [ "$result" -eq 0 ]
}

@test "get BCH balance" {
  result="$(
    bin/balance \
    --user cryptorpc \
    --password local321 \
    --port 9333 \
    --host bitcoin-cash \
    --currency BCH
    )"
  [ "$result" -eq 0 ]
}
